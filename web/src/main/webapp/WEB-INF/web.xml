<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">

  <display-name>PaymentsSystem</display-name>

  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.pvt.khudnitsky.payments.web.controllers.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>

  <filter>
    <filter-name>Encoding</filter-name>
    <filter-class>by.pvt.khudnitsky.payments.web.filters.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Encoding</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>


    <filter>
        <filter-name>PageRedirectFilter</filter-name>
        <filter-class>by.pvt.khudnitsky.payments.web.filters.PageRedirectFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PageRedirectFilter</filter-name>
        <!--<servlet-name>Controller</servlet-name> -->
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>

    <!--
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>by.pvt.khudnitsky.payments.web.filters.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <servlet-name>Controller</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    -->
  <resource-ref>
    <res-ref-name>jdbc/payments</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>